{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="...">
                <div class="card-body">
                    <h1 class="card-title">{{offer.Title}}</h5>
                    <p class="card-text">{{offer.Adresse}} {{offer.Postal}} {{offer.Ville}}</p>
                    <p class="card-text">{{offer.Description}}</p>
                    <p class="card-text">{{offer.Contract.Title}}</p>
                    <p class="card-text">{{offer.ContractType.Title}}</p>
                    <p class="card-text">Cr√©ation de l'offre : {{offer.Creation | date("d, m, Y")}}</p>
                    <p class="card-text">Fin de l'offre : {{offer.End | date("d, m, Y")}}</p>
                    <a href="/offer/{{offer.id}}" class="btn btn-primary">Postuler</a>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
